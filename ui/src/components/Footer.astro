---
import {useTranslations } from "../i18n/utils"

const t = useTranslations(Astro.params.locale as "en" | "de" | "es" | "fr");
---

<footer class="dark:bg-gray-800 dark:text-gray-100 bg-gray-100 mt-auto shadow-sm">
  <div class="container mx-auto px-4 py-6">
    <div class="flex flex-col md:flex-row text-center md:text-left">
      <div class="mb-4 md:mb-0 w-128">
        <h2 class="text-lg md:text-xl font-bold">{t("footer.header")}</h2>
        <p class="dark:bg-gray-800 dark:text-gray-100 mt-2 text-sm">{t('footer.description')}</p>
        <p class="text-gray-400 text-xs">
       {t('footer.additional')}
        </p>
      </div>
    </div>
    <div class="text-center md:text-right">
        <p class="text-gray-400 mb-2 text-sm">
          {t('footer.disclaimer')}
        </p>
        <p class="text-xs text-gray-500">
          &copy; {new Date().getFullYear()} Compulsiveprices. {t("footer.rights")}.
        </p>
      </div>
  </div>
</footer>