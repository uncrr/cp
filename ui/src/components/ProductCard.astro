---
export interface Props {
  product: {
    id: number;
    title: string;
    description: string;
    category: string;
    brand: string;
    image: string;
    markets: Array<{
      name: string;
      price: number;
      originalPrice?: number;
      url: string;
      shipping: string;
    }>;
    rating: number;
    reviewCount: number;
    inStock: boolean;
  };
}

const { product } = Astro.props;

// Find the best price
const prices = product.markets.map(m => m.price);
const minPrice = Math.min(...prices);
const maxPrice = Math.max(...prices);
---

<div class="product-card bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow w-full max-w-2xl mx-auto" data-product-id={product.id}>
  <div class="p-3 sm:p-4">
    <!-- Product Image and Basic Info -->
    <div class="flex flex-col sm:flex-row mb-3 sm:mb-4 gap-3">
      <div class="flex-shrink-0 w-16 h-16 sm:w-20 sm:h-20 bg-gray-200 rounded-lg flex items-center justify-center mx-auto sm:mx-0">
        <span class="text-gray-400 text-xs">Image</span>
      </div>
      <div class="flex-1 text-center sm:text-left min-w-0">
        <h3 class="font-semibold text-base sm:text-lg text-gray-800 mb-1 line-clamp-2">{product.title}</h3>
        <div class="flex items-center justify-center sm:justify-start mb-2 flex-wrap gap-1">
          <div class="flex mr-2">
            {[1, 2, 3, 4, 5].map((star) => (
              <svg 
                key={star}
                class={`h-3 w-3 sm:h-4 sm:w-4 ${star <= Math.floor(product.rating) ? 'text-amber-400 fill-current' : 'text-gray-300'}`}
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-xs sm:text-sm text-gray-600 whitespace-nowrap">{product.rating} ({product.reviewCount})</span>
        </div>
        <div class="text-xs sm:text-sm text-gray-500 flex flex-wrap justify-center sm:justify-start gap-1">
          <span class="bg-gray-100 px-2 py-1 rounded">{product.brand}</span>
          <span class="bg-gray-100 px-2 py-1 rounded">{product.category.replace('-', ' ')}</span>
        </div>
      </div>
    </div>
    
    <!-- Price Range -->
    <div class="mb-3 sm:mb-4">
      <div class="flex justify-between items-center mb-1">
        <span class="text-xs sm:text-sm text-gray-600">Price Range:</span>
        <span class="font-semibold text-primary-600 text-sm sm:text-base">${minPrice.toFixed(2)} - ${maxPrice.toFixed(2)}</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div 
          class="bg-primary-600 h-2 rounded-full" 
          style={`width: ${((minPrice / maxPrice) * 100)}%`}
        ></div>
      </div>
    </div>
    
    <!-- Market Prices -->
    <div class="space-y-2 sm:space-y-3">
      {
        product.markets.map(market => (
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center p-2 sm:p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors gap-2">
            <div class="flex items-center justify-between sm:justify-start min-w-0 flex-1">
              <div class="flex items-center min-w-0">
                <span class={`inline-block w-2 h-2 sm:w-3 sm:h-3 rounded-full mr-2 flex-shrink-0 ${
                  market.name === 'Amazon' ? 'bg-yellow-500' :
                  market.name === 'AliExpress' ? 'bg-red-500' :
                  market.name === 'Walmart' ? 'bg-blue-500' :
                  market.name === 'Alibaba' ? 'bg-orange-500' : 'bg-gray-500'
                }`}></span>
                <span class="font-medium text-gray-700 text-sm sm:text-base truncate">{market.name}</span>
              </div>
              <div class="sm:hidden text-right min-w-0 flex-1">
                <div class="flex items-center justify-end">
                  <span class="font-semibold text-gray-800 mr-1 text-sm truncate">${market.price.toFixed(2)}</span>
                  {
                    market.originalPrice && market.originalPrice > market.price && (
                      <span class="text-xs text-gray-500 line-through truncate">${market.originalPrice.toFixed(2)}</span>
                    )
                  }
                </div>
                <div class="text-xs text-gray-500 truncate">{market.shipping}</div>
              </div>
            </div>
            <div class="hidden sm:block text-right min-w-0 flex-1">
              <div class="flex items-center justify-end">
                <span class="font-semibold text-gray-800 mr-2 truncate">${market.price.toFixed(2)}</span>
                {
                  market.originalPrice && market.originalPrice > market.price && (
                    <span class="text-sm text-gray-500 line-through truncate">${market.originalPrice.toFixed(2)}</span>
                  )
                }
              </div>
              <div class="text-xs text-gray-500 truncate">{market.shipping}</div>
            </div>
            <a 
              href={market.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-primary-600 text-white text-xs sm:text-sm py-1 sm:py-1 px-2 sm:px-3 rounded hover:bg-primary-700 transition-colors text-center w-full sm:w-auto flex-shrink-0"
            >
              Visit Store
            </a>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>