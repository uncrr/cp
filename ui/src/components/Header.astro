---
export interface Props {
  currentLang?: string;
  translations?: any;
}

const { currentLang = "en", translations = {} } = Astro.props;
---

<header class="bg-white dark:bg-gray-800 shadow-sm sticky top-0 z-10 transition-colors duration-200">
  <div class="mx-auto px-4 py-3">
    <!-- Main header row -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 text-center sm:text-left">
      <div class="flex items-center justify-center sm:justify-start">
        <h1 class="text-xl sm:text-2xl font-bold text-gray-700 dark:text-gray-100 ">
          {translations.header?.title || "compulsiveprices.com"}
        </h1>
        <span class="ml-2 text-xs text-gray-700 dark:text-gray-100 px-2 py-1 rounded-full hidden sm:inline">Beta</span>
      </div>
      <p class="text-gray-600 dark:text-gray-300 text-xs sm:text-sm transition-colors duration-200">
        {translations.header?.subtitle || "Compare prices from Amazon, AliExpress, Walmart, Alibaba and more"}
      </p>
      <div class="flex justify-center sm:justify-end items-center gap-4 mt-3">
      <!-- Dark Mode Toggle -->
      <button
        id="darkModeToggle"
        class="p-2 rounded-lg bg-gray-100 cursor-pointer border-none dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600 transition-all duration-200 flex items-center justify-center w-10 h-10"
        title="Toggle dark mode"
      >
        <!-- Sun icon (light mode) -->
        <svg class="w-5 h-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <!-- Moon icon (dark mode) -->
        <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>

      <!-- Language Selector -->
      <div class="relative">
        <button
          id="languageToggle"
          class="p-2 rounded-lg cursor-pointer bg-gray-100 border-none dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600 transition-all duration-200 flex items-center gap-2"
          title="Select language"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
          </svg>
          <span class="text-sm font-medium hidden sm:inline">{currentLang.toUpperCase()}</span>
        </button>
        
        <!-- Language Dropdown -->
        <div id="languageDropdown" class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 hidden z-20 transition-all duration-200">
          <div class="p-2 space-y-1">
            <button 
              data-lang="en" 
              class="w-full text-left px-3 py-2 text-sm cursor-pointer text-gray-700 dark:text-gray-700 hover:bg-gray-700 hover:dark:text-gray-100 dark:hover:bg-gray-700 rounded-md flex items-center justify-between transition-colors duration-200"
            >
              <span>English</span>
              {currentLang === 'en' && (
                <svg class="w-4 h-4 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              )}
            </button>
            <button 
              data-lang="es" 
              class="w-full text-left px-3 py-2 text-sm text-gray-700 dark:text-gray-700 hover:dark:text-gray-100 hover:bg-gray-700 dark:hover:bg-gray-700 cursor-pointer rounded-md flex items-center justify-between transition-colors duration-200"
            >
              <span>Español</span>
              {currentLang === 'es' && (
                <svg class="w-4 h-4 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              )}
            </button>
            <button 
              data-lang="fr" 
              class="w-full text-left px-3 py-2 text-sm text-gray-700 dark:text-gray-700 hover:dark:text-gray-100 hover:bg-gray-700 dark:hover:bg-gray-700 cursor-pointer rounded-md flex items-center justify-between transition-colors duration-200"
            >
              <span>Français</span>
              {currentLang === 'fr' && (
                <svg class="w-4 h-4 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              )}
            </button>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</header>